new Crawler({
  appId: "JNTLW5AVDA",
  apiKey: "ec0fc0a89399ff25bfbe38bb8e001f18",
  maxUrls: null,
  rateLimit: 8,
  maxDepth: 10,
  sitemaps: ["https://docs.fused.io/sitemap.xml"],
  ignoreCanonicalTo: true,
  startUrls: ["https://docs.fused.io/"],
  discoveryPatterns: ["https://docs.fused.io/**"],
  schedule: "every 1 day at 7:30am",
  safetyChecks: { beforeIndexPublishing: { maxLostRecordsPercentage: 10 } },
  actions: [
    {
      indexName: "fused",
      pathsToMatch: ["https://docs.fused.io/**"],
      recordExtractor: ({ $, helpers, url }) => {
        const lvl0 =
          $(
            ".menu__link.menu__link--sublist.menu__link--active, .navbar__item.navbar__link--active",
          )
            .last()
            .text() || "Documentation";
        const isBlogPost = url.href.includes("/blog/");

        // Get the base records from docsearch
        const records = helpers.docsearch({
          recordProps: {
            lvl0: {
              selectors: "",
              defaultValue: lvl0,
            },
            lvl1: ["header h1", "article h1"],
            lvl2: "article h2",
            lvl3: "article h3",
            lvl4: "article h4",
            lvl5: "article h5, article td:first-child",
            lvl6: "article h6",
            content: "article p, article li, article td:last-child",
          },
          indexHeadings: true,
          aggregateContent: true,
          recordVersion: "v3",
        });

        // Add custom docBoost attribute to each record
        return records.map((record) => ({
          ...record,
          docBoost: isBlogPost ? 0 : 100,
        }));
      },
    },
  ],
  initialIndexSettings: {
    fused: {
      attributesForFaceting: [
        "type",
        "lang",
        "language",
        "version",
        "docusaurus_tag",
      ],
      attributesToRetrieve: [
        "hierarchy",
        "content",
        "anchor",
        "url",
        "url_without_anchor",
        "type",
        "docBoost",
      ],
      attributesToHighlight: ["hierarchy", "content"],
      attributesToSnippet: ["content:10"],
      camelCaseAttributes: ["hierarchy", "content"],
      searchableAttributes: [
        "hierarchy.lvl0",
        "hierarchy.lvl1",
        "unordered(hierarchy.lvl2)",
        "unordered(hierarchy.lvl3)",
        "unordered(hierarchy.lvl4)",
        "unordered(hierarchy.lvl5)",
        "unordered(hierarchy.lvl6)",
        "content",
      ],
      distinct: true,
      attributeForDistinct: "url",
      customRanking: [
        "desc(docBoost)",
        "desc(weight.level)",
        "asc(weight.position)",
      ],
      ranking: [
        "words",
        "filters",
        "custom",
        "typo",
        "attribute",
        "proximity",
        "exact",
      ],
      highlightPreTag: '<span class="algolia-docsearch-suggestion--highlight">',
      highlightPostTag: "</span>",
      minWordSizefor1Typo: 3,
      minWordSizefor2Typos: 7,
      allowTyposOnNumericTokens: false,
      minProximity: 1,
      ignorePlurals: true,
      advancedSyntax: true,
      attributeCriteriaComputedByMinProximity: true,
      removeWordsIfNoResults: "allOptional",
      separatorsToIndex: "_",
    },
  },
});